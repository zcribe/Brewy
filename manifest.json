{
    "manifest_version": 2,
    "name": "Brewey",
    "author": "Erlend Eelmets",
    "version": "0.1",
    "description": "Various formulas and tools that are useful for homebrewer.",
    "icons": {
      "192": "icons/icon.png"
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "browser_action": {
      "default_icon": {

        "192": "icons/icon.png"
      },
      "default_title": "Brewey: Homebrewer toolkit",
      "default_popup": "popup.html"
    },
    
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js",
            "js/scripts.js"
        ]
    },


    "permissions": [
        "webRequest",
        "<all_urls>",
        "tabs",
        "activeTab"
      ]
  }