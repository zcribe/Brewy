{
    "manifest_version": 2,
    "name": "Homebrewer Tools",
    "author": "Erlend Eelmets",
    "version": "0.1",
    "description": "Various formulas and tools that are useful for homebrewer.",
    "icons": {
      "36": "icons/android-icon-36x36.png",
      "48": "icons/android-icon-48x48.png",
      "72": "icons/android-icon-72x72.png",
      "96": "icons/android-icon-96x96.png",
      "144": "icons/android-icon-144x144.png",
      "192": "icons/android-icon-192x192.png"
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "browser_action": {
      "default_icon": {
        "36": "icons/android-icon-36x36.png",
        "48": "icons/android-icon-48x48.png",
        "72": "icons/android-icon-72x72.png",
        "96": "icons/android-icon-96x96.png",
        "144": "icons/android-icon-144x144.png",
        "192": "icons/android-icon-192x192.png"
      },
      "default_title": "Sisuturunduse blokker",
      "default_popup": "popup.html"
    },
    
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js",
            "js/scripts.js"
        ]
    },


    "permissions": [
        "webRequest",
        "<all_urls>",
        "tabs"
      ]
  }